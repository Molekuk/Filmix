@model Filmix.Models.FilmModels.Film

<div class="form_container">
<form method="post" asp-action="EditFilm" asp-controller="Content" class="form">
    
    <div class="form_description">
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    
    <div class="form_field">
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    
    <div class="form_field">
        <label asp-for="Slug"></label>
        <input asp-for="Slug"/>
        <span asp-validation-for="Slug"></span>
    </div>

    <div class="form_field">
        <label asp-for="Image"></label>
        <input asp-for="Image"/>
        <span asp-validation-for="Image"></span>
    </div>

    <div class="form_field">
        <label asp-for="Duration"></label>
        <input asp-for="Duration"/>
        <span asp-validation-for="Duration"></span>
    </div class="form_field">

    <div class="form_field">
        <label asp-for="Country"></label>
        <input asp-for="Country"/>
        <span asp-validation-for="Country"></span>
    </div>

    <div class="form_field">
        <label asp-for="Producer"></label>
        <input asp-for="Producer"/>
        <span asp-validation-for="Producer"></span>
    </div>

    <div class="form_field">
        <label asp-for="Company"></label>
        <input asp-for="Company"/>
        <span asp-validation-for="Company"></span>
    </div>
    
    <div class="form_field">
        <label asp-for="Rating"></label>
        <input asp-for="Rating"/>
        <span asp-validation-for="Rating"></span>
    </div>

    <div class="form_field">
        <label asp-for="Year"></label>
        <input type="number" asp-for="Year"/>
        <span asp-validation-for="Year"></span>
    </div>


    <input class="change_button" type="submit" value="Сохранить"/>
    <a class="change_button"  asp-action="ChangeActorsInFilm" asp-route-filmId="@Model.Id">Изменить актеров фильма</a>
    <a class="change_button"  asp-action="ChangeGenresInFilm" asp-route-FilmId="@Model.Id">Изменить жанры фильма</a>
    <a class="change_button"  asp-action="DeleteFilm"         asp-route-filmId="@Model.Id">Удалить фильм</a>
</form>
    
<a class="back_button" asp-action="Films" asp-controller="Content">Назад</a>
</div>