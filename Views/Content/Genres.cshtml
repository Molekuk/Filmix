@model IEnumerable<Filmix.Models.GenreModels.Genre>

<div class="table_page">
<h1>Редактор жанров</h1>

    <table class="table">
        <thead>
             <tr>
                <th>Имя</th>
                <th>Slug</th>
                <th>Изображение</th>
                <th>Задний фон</th>
                <th>Фильмы</th>
             </tr>
        </thead>

        @foreach(var genre in Model)
        {
            <tr onclick="window.location.href='/Content/EditGenre/@genre.Id';return false">
                <td>@genre.Name</td>
                <td>@genre.Slug</td>
                <td>@genre.Image</td>
                <td>@genre.BackgroundImage</td>
                <td>
                    @foreach(var film in genre.Films)
                    {
                        <p>@film.Name</p>
                    }
                </td>
            </tr>
            
        }

    </table>

    <div class = "table_buttons">
        <a class="add_button" asp-action="AddGenre" asp-controller="Content">Добавить жанр</a>

        <a class="back_button" asp-action="Home" asp-controller="Content">Назад</a>
    </div>

</div>